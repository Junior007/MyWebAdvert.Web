@model WebAdvert.Web.Models.Accounts.ConfirmNewPasswordModel

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Accounts" asp-action="ConfirmNewPassword">
            <div asp-validation-summary="All" class="text-danger" />

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" readonly="readonly" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Code"> </label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Password"> </label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <button type="submit">Confirm</button>
        </form>
    </div>
</div>


